@model IndexViewModel
@{
    ViewData["Title"] = "Profiel";
    ViewData.AddActivePage(ManageNavPages.Index);
}

<h4>@ViewData["Title"]</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                @if (Model.IsEmailConfirmed)
                {
                    <div class="input-group">
                        <input asp-for="Email" class="form-control" />
                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                    </div>
                }
                else
                {
                    <input asp-for="Email" class="form-control" />
                    <button asp-action="SendVerificationEmail" class="btn btn-link">Stuur verificatie email</button>
                }
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" type="number" minlength="10" maxlength="10" class="form-control" title="moet een geldig telefoonnummer zijn."/>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="dt_birth"></label>
                <input asp-for="dt_birth" type="date" min="1900-00-00" max="2017-00-00" class="form-control" title="geboortedatum moet tusen 1900 en 2017 zitten."/>
                <span asp-validation-for="dt_birth" class="text-danger"></span> 

                </div>
          
            <div class="form-group">
                <label asp-for="firstname"></label>
                <input asp-for="firstname" class="form-control" maxlength="15" title="moet een geldige naam zijn"/>
                <span asp-validation-for="firstname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="middlename"></label>
                <input asp-for="middlename" maxlength="15" class="form-control" />
                <span asp-validation-for="middlename" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="lastname"></label>
                <input asp-for="lastname" maxlength="15" class="form-control" />
                <span asp-validation-for="lastname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="gender"></label>
                <select asp-for="gender">
                    <option value="Man">Man</option>
                    <option value="Vrouw">Vrouw</option>
                    class="form-control"
                </select>
                <span asp-validation-for="gender" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-default">Opslaan</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
