@model IEnumerable<Project56_new.Models.ApplicationUser>

@{
    ViewData["Title"] = "Gebruikersoverzicht";
}

<h2>Gebruikersoverzicht</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                <span>Acties</span>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>    
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Wijzigen</a>
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Meer info</a>
                @if (item.UserName == "admin@admin.nl")
                {
                    //<span style="color:red;"> Admin user mag niet verwijderd worden!</span>
                }
                else
                {        
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">X</a>
                }

            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>