<h1>Selecteer betaalmethode</h1>

<form asp-action="ConfirmOrder" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label text="Pay Method" class="control-label"></label>
        <select name="PayMethod" class="form-control">
            <option value="0" selected>ING</option>
            <option value="1">Rabobank</option>
            <option value="2">ABN Amro</option>
            <option value="3">Paypal</option>
        </select>
        <span text="PayMethod" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Bestel" id="bestelbutton" onclick="document.getElementById('bestelbutton').style.display='none'; document.getElementById('order_status').style.display='block'; " class="btn btn-success" />
        <span id="order_status" style="display:none; color:green;">Even geduld uw order wordt verzonden.</span>
    </div>
</form>